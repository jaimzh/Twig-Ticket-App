{% extends "layouts/base.html.twig" %}
{% block title %}Sign up{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-blue-50 flex items-center justify-center p-4 relative">
  <!-- Decorative Circles -->
  <div class="absolute top-20 left-10 w-72 h-72 bg-purple-200 rounded-full opacity-20 blur-3xl"></div>
  <div class="absolute bottom-10 right-20 w-96 h-96 bg-blue-200 rounded-full opacity-20 blur-3xl"></div>

  <div class="w-full max-w-md shadow-xl relative z-10 bg-white border rounded-xl">
    <div class="p-6 border-b">
      <h1 class="text-center text-3xl font-semibold">Create Account</h1>
      <p class="text-center text-gray-600 mt-1">Get started with TicketFlow today</p>
    </div>

    <div class="p-6">
      <form method="post" class="space-y-4" novalidate>
        <div class="space-y-2">
          <label for="email" class="block text-sm">Email</label>
          <input id="email" name="email" type="email" placeholder="you@example.com"
                 value="{{ form.email|default('') }}"
                 class="w-full border rounded p-2 {% if errors.email|default('') %}border-red-500{% endif %}">
          {% if errors.email|default('') %}<p class="text-sm text-red-500">{{ errors.email }}</p>{% endif %}
        </div>

        <div class="space-y-2">
          <label for="password" class="block text-sm">Password</label>
          <input id="password" name="password" type="password" placeholder="••••••••"
                 class="w-full border rounded p-2 {% if errors.password|default('') %}border-red-500{% endif %}">
          {% if errors.password|default('') %}<p class="text-sm text-red-500">{{ errors.password }}</p>{% endif %}
        </div>

        <div class="space-y-2">
          <label for="confirmPassword" class="block text-sm">Confirm Password</label>
          <input id="confirmPassword" name="confirmPassword" type="password" placeholder="••••••••"
                 class="w-full border rounded p-2 {% if errors.confirmPassword|default('') %}border-red-500{% endif %}">
          {% if errors.confirmPassword|default('') %}<p class="text-sm text-red-500">{{ errors.confirmPassword }}</p>{% endif %}
        </div>

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white rounded p-2">
          Create Account
        </button>
      </form>
    </div>

    <div class="p-4 border-t text-center">
      <p class="text-sm text-gray-600">
        Already have an account?
        <a href="/auth/login" class="text-blue-600 hover:underline">Sign in</a>
      </p>
    </div>
  </div>
</div>
{% endblock %}

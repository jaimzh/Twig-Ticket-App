{% extends "layouts/base.html.twig" %}
{% block title %}Tickets{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
  {% include 'layouts/navbar.html.twig' %}

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h1 class="text-4xl mb-2">Ticket Management</h1>
      <p class="text-gray-600">Create and manage your support tickets</p>
    </div>

    {# Create Ticket Form #}
    <div class="bg-white border rounded-xl shadow-md mb-8">
      <div class="p-4 border-b">
        <h2 class="text-lg font-semibold">Create New Ticket</h2>
        <p class="text-sm text-gray-500">Fill in the details to create a new ticket</p>
      </div>
      <div class="p-6">
        <form method="post" action="/tickets" class="space-y-4" novalidate>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-2">
              <label for="title" class="block text-sm">
                Title <span class="text-red-500">*</span>
              </label>
              <input id="title" name="title" placeholder="Enter ticket title"
                     value="{{ form.title|default('') }}"
                     class="w-full border rounded p-2 {% if errors.title|default('') %}border-red-500{% endif %}">
              {% if errors.title|default('') %}<p class="text-sm text-red-500">{{ errors.title }}</p>{% endif %}
            </div>

            <div class="space-y-2">
              <label for="priority" class="block text-sm">Priority</label>
              <select id="priority" name="priority" class="w-full border rounded p-2">
                {% for p in ['low','medium','high'] %}
                  <option value="{{ p }}" {{ (form.priority|default('medium') == p) ? 'selected' : '' }}>{{ p|capitalize }}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="space-y-2">
            <label for="status" class="block text-sm">Status</label>
            <select id="status" name="status" class="w-full border rounded p-2">
              <option value="open" {{ (form.status|default('open') == 'open') ? 'selected':'' }}>Open</option>
              <option value="in_progress" {{ (form.status|default('open') == 'in_progress') ? 'selected':'' }}>In Progress</option>
              <option value="closed" {{ (form.status|default('open') == 'closed') ? 'selected':'' }}>Closed</option>
            </select>
          </div>

          <div class="space-y-2">
            <label for="description" class="block text-sm">Description</label>
            <textarea id="description" name="description" rows="4" placeholder="Enter ticket description (optional)"
                      class="w-full border rounded p-2">{{ form.description|default('') }}</textarea>
          </div>

          <button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded">Add Ticket</button>
        </form>
      </div>
    </div>

    {# Tickets List #}
    <div>
      <h2 class="text-2xl mb-4">All Tickets ({{ tickets|length }})</h2>

      {% if tickets is empty %}
        <div class="bg-white border rounded-xl shadow-md">
          <div class="p-12 text-center text-gray-500">
            No tickets yet. Create your first ticket above!
          </div>
        </div>
      {% else %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {% for t in tickets %}
            <div class="bg-white border rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300">
              <div class="p-4 border-b">
                <div class="flex justify-between items-start gap-2">
                  <h3 class="text-lg font-semibold">{{ t.title }}</h3>
                  <div class="flex gap-2">
                    <button
                      class="h-8 w-8 grid place-items-center hover:bg-gray-100 rounded"
                      data-edit
                      data-id="{{ t.id }}"
                      data-title="{{ t.title|e('html_attr') }}"
                      data-status="{{ t.status }}"
                      data-priority="{{ t.priority }}"
                      data-description="{{ t.description|e('html_attr') }}"
                      title="Edit">
                      <i data-lucide="pencil" class="h-4 w-4 text-blue-600"></i>
                    </button>
                    <form method="post" action="/tickets/{{ t.id }}/delete"
                          onsubmit="return confirm('Delete this ticket permanently?');">
                      <button class="h-8 w-8 grid place-items-center hover:bg-gray-100 rounded" title="Delete">
                        <i data-lucide="trash-2" class="h-4 w-4 text-red-600"></i>
                      </button>
                    </form>
                  </div>
                </div>
              </div>
              <div class="p-4 space-y-3">
                <div class="flex gap-2">
                  <span class="px-2 py-1 text-xs border rounded-full
                    {% if t.status == 'open' %} bg-green-100 text-green-700 border-green-200
                    {% elseif t.status == 'in_progress' %} bg-amber-100 text-amber-700 border-amber-200
                    {% else %} bg-gray-100 text-gray-700 border-gray-200 {% endif %}">
                    {{ t.status|replace({'_':' '}) }}
                  </span>
                  <span class="px-2 py-1 text-xs border rounded-full
                    {% if t.priority == 'high' %} bg-red-100 text-red-700 border-red-200
                    {% elseif t.priority == 'medium' %} bg-yellow-100 text-yellow-700 border-yellow-200
                    {% else %} bg-blue-100 text-blue-700 border-blue-200 {% endif %}">
                    {{ t.priority }}
                  </span>
                </div>

                {% if t.description %}
                  <p class="text-sm text-gray-600 line-clamp-3">{{ t.description }}</p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </main>
</div>

{# EDIT MODAL #}
<div id="editModal" class="fixed inset-0 bg-black/40 hidden items-center justify-center z-50">
  <div class="bg-white w-full max-w-lg rounded-xl shadow-xl">
    <div class="p-6 border-b">
      <h3 class="text-xl font-semibold">Edit Ticket</h3>
      <p class="text-sm text-gray-500">Make changes to your ticket</p>
    </div>
    <form id="editForm" method="post" class="p-6 space-y-4">
      <input type="hidden" name="id" id="edit-id">
      <div class="space-y-2">
        <label for="edit-title" class="block text-sm">Title <span class="text-red-500">*</span></label>
        <input id="edit-title" name="title" class="w-full border rounded p-2" />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="space-y-2">
          <label for="edit-status" class="block text-sm">Status</label>
          <select id="edit-status" name="status" class="w-full border rounded p-2">
            <option value="open">Open</option>
            <option value="in_progress">In Progress</option>
            <option value="closed">Closed</option>
          </select>
        </div>
        <div class="space-y-2">
          <label for="edit-priority" class="block text-sm">Priority</label>
          <select id="edit-priority" name="priority" class="w-full border rounded p-2">
            <option value="low">Low</option>
            <option value="medium">Medium</option>
            <option value="high">High</option>
          </select>
        </div>
      </div>

      <div class="space-y-2">
        <label for="edit-description" class="block text-sm">Description</label>
        <textarea id="edit-description" name="description" rows="4" class="w-full border rounded p-2"></textarea>
      </div>

      <div class="flex justify-end gap-3 pt-2">
        <button type="button" id="editCancel" class="border rounded px-4 py-2 hover:bg-gray-50">Cancel</button>
        {# form action gets set by JS to /tickets/{id}/update #}
        <button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded">Save Changes</button>
      </div>
    </form>
  </div>
</div>
{% endblock %}
